<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/backgroundfragment"
    android:layout_height="match_parent">

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="6dp"
        tools:context=".DeleteFragment">

        <TextView
            android:id="@+id/text_result_delete_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Result Of Post Data"
            android:outlineAmbientShadowColor="#fff"
            android:padding="60dp"
            android:shadowColor="#fff"
            android:textColor="#fff"
            android:textColorHint="#fff" />

        <Button
            android:id="@+id/btn_post_data"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="100dp"
            android:text="Delete Data" />
    </LinearLayout>
</ScrollView>
