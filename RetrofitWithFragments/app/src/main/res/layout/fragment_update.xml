<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/backgroundfragment"
    android:layout_height="match_parent">

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="6dp"
        tools:context=".UpdateFragment">

        <!-- TODO: Update blank fragment layout -->
        <EditText
            android:id="@+id/edt_text_user_id_update_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:hint="Enter UserId"
            android:maxLines="1"
            android:inputType="number"
            android:outlineAmbientShadowColor="#fff"
            android:shadowColor="#fff"
            android:textColor="#fff"
            android:textColorHint="#fff" />

        <EditText
            android:id="@+id/edt_text_title_update_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:hint="Enter Title"
            android:maxLines="1"
            android:inputType="text"
            android:outlineAmbientShadowColor="#fff"
            android:shadowColor="#fff"
            android:textColor="#fff"
            android:textColorHint="#fff" />

        <EditText
            android:id="@+id/edt_text_body_update_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:hint="Enter Body"
            android:maxLines="1"
            android:inputType="text"
            android:outlineAmbientShadowColor="#fff"
            android:shadowColor="#fff"
            android:textColor="#fff"
            android:textColorHint="#fff" />

        <TextView
            android:id="@+id/text_result_update_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Result Of update Data"
            android:outlineAmbientShadowColor="#fff"
            android:padding="60dp"
            android:shadowColor="#fff"
            android:textColor="#fff"
            android:textColorHint="#fff" />

        <Button
            android:id="@+id/btn_update_data"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="100dp"
            android:text="Update Data" />
    </LinearLayout>
</ScrollView>
